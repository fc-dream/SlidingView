<com.kohoh.SlidingView.SlidingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mSlidingView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:dragEnable="true"
    app:initialX="0dp"
    app:initialY="0dp"
    app:interceptAllGestureEnable="false"
    app:slideEnable="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/holo_blue_light">

    </LinearLayout>


</com.kohoh.SlidingView.SlidingView>
